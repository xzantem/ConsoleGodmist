<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Configurations>Debug;Release;Godmist</Configurations>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Spectre.Console" Version="0.47.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Items\Armors\" />
    <Folder Include="Items\Weapons\" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="locale\locale_items.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>locale_items.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="locale\locale_main.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>locale_main_new.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="locale\locale_main.pl.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>locale_main_new.pl.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="locale\locale_items.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>locale_items.resx</DependentUpon>
    </Compile>
    <Compile Update="locale\locale_main.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>locale_main.resx</DependentUpon>
    </Compile>
  </ItemGroup>

</Project>
